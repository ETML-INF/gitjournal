{
  "name": "GitJournal",
  "version": "1.2.0",
  "description": "Journal de travail Git - Application Electron",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "node --test server/server.test.js",
    "build": "npm test && electron-builder",
    "build:mac": "npm test && electron-builder --mac",
    "build:win": "npm test && electron-builder --win",
    "build:linux": "npm test && electron-builder --linux"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.gitjournal.app",
    "productName": "GitJournal",
    "files": [
      "main.js",
      "preload.js",
      "version.js",
      "settings.html",
      "new-project.html",
      "server/**/*",
      "assets/**/*",
      "example.gitj"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
